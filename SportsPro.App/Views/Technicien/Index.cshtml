@model IEnumerable<SportsPro.Domain.Technician>

@{
    ViewData["Title"] = "Technicians";
}

<h3><i class="fas fa-user-astronaut"></i> Technician Manager</h3>
<br />


<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Name)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Email)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Phone)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.Name)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Email)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Phone)
                </td>
                <td>
                    <a class="edit-btn" asp-action="Edit" asp-route-id="@item.TechnicianID">Edit</a> 
                    
                    <a class="delete-btn" asp-action="Delete" asp-route-id="@item.TechnicianID">Delete</a>
                </td>
            </tr>
        }
    </tbody>
</table>
<p>
    <a class="create-btn" asp-action="Create">Add Technician</a>
</p>