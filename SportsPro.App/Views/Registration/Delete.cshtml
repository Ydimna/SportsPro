@model SportsPro.Domain.Registration

@{
    ViewData["Title"] = "Remove Registration";
}



<h3 style="color:red">Are you sure you want to delete this?</h3>
<div>
    <h4>Registration</h4>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Customer)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.CustomerID)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Product)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.ProductID)
        </dd>
    </dl>

    <form asp-action="Delete">
        <input type="hidden" asp-for="RegistrationID" />
        <input type="submit" value="Delete" class="btn btn-danger" /> &nbsp;&nbsp;
        <input type="button" value="Cancel" class="btn btn-danger" style="background-color:#4cd137; color:#f5f6fa; font-weight: 700; font-size:17px" onclick="location.href='@Url.Action("Index","Registration")';" />
    </form>
</div>
