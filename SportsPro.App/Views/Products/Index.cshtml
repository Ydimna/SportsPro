@model IEnumerable<SportsPro.Domain.Product>

@{
    ViewData["Title"] = "Index";
}

<h3><i class="fas fa-box"></i> Product Manager</h3>
<br />


<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.ProductCode)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Name)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.YearlyPrice)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.ReleaseDate)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.ProductCode)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Name)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.YearlyPrice)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.ReleaseDate)
                </td>
                <td>
                    <a class="edit-btn" asp-action="Edit" asp-route-id="@item.ProductID">Edit</a> 
                    @*<a asp-action="Details" asp-route-id="@item.Name">Details</a> |*@
                    <a class="delete-btn" asp-action="Delete" asp-route-id="@item.ProductID">Delete</a>
                </td>
            </tr>
        }
    </tbody>
</table>
<p>
    <a class="create-btn" asp-action="Create">Create New</a>
</p>