@model SportsPro.Domain.Incident

@{
    ViewData["Title"] = "Delete Incident";
}

<h5 style="color:red">Are you sure you want to delete this Incident?</h5>
<br />
<div>
    <h4>Incident</h4>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Customer)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.CustomerID)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Product)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.ProductID)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Technician)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.TechnicianID)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Title)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Title)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Description)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Description)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.DateOpened)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.DateOpened)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.DateClosed)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.DateClosed)
        </dd>
    </dl>

    <form asp-action="Delete">
        <input type="hidden" asp-for="IncidentID" />
        <input type="submit" value="Delete" class="btn btn-danger" /> &nbsp;&nbsp;
        <input type="button" value="Cancel" class="btn btn-danger" style="background-color:#4cd137; color:#f5f6fa; font-weight: 700; font-size:17px" onclick="location.href='@Url.Action("Index","Incidents")';" />
        @*<a asp-action="Index">Back to List</a>*@
    </form>
</div>
